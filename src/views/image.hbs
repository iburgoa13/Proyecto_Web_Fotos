<div class="card">
    <div class="card-header d-flex justify-content-between  align-items-center" style="color: black;">
        <h2>{{imagen.title}}</h2>
        <button class="btn btn-danger" id ="btn-delete" data-id="{{imagen.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body" style="color: black;">
        <p>{{imagen.description}}</p>
        <div class="text-center">
            <img src="/public/upload/{{imagen.fileName}}" class="img-fluid" alt="">
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <button class="btn btn-success" id="btn-like" data-id="{{imagen.fileName}}">
                <i class="fas fa-thumbs-up"></i> Like
            </button>
            <p>
                <span class="likes-count " style="color: black;">{{imagen.likes}}</span>
                <i class="fas fa-heart"></i>
            </p>
            <p>
                <i class="fas fa-eye"></i> {{imagen.visitas}}
            </p>
            <p>
                <i class=" far fa-clock"></i> {{timeago imagen.timeStamp}}
            </p>
        </div>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comentarios</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment-o"></i> Publicar comentario
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/images/{{imagen.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Nombre">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="email" placeholder="Email">
                </div>
                 <div class="form-group">
                     <textarea name="comment" rows="2" class="form-control" placeholder="Comentario..."></textarea>
                 </div>
                 <div class="form-group">
                     <button class="btn btn-success" id="btn-comment">
                         <i class="fa fa-comment"></i> Publicar
                     </button>
                 </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
            <li class="list-group-item">
                <div class="row">
                    <a href="#" class="col text-center">
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
                    </a>
                    <blockquote>
                        <p class="lead">
                            {{comment}}
                        </p>
                        <footer class="blockquote-footer">
                            {{name}} - {{timeago timeStamp}}
                        </footer>
                    </blockquote>
                </div>
            </li>
               
            {{/each}}
        </ul>
    </div>
</div>